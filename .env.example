# ==================================================
# AI Telegram Agents - Конфигурация
# ==================================================

# Telegram Bot Tokens
# Получить через @BotFather в Telegram
TELEGRAM_BOT_TOKEN_NTD=123456:ABC-DEF_your_bot_token_ntd
TELEGRAM_BOT_TOKEN_DOCS=789012:GHI-JKL_your_bot_token_docs

# ==================================================
# AI Provider Configuration
# ==================================================

# Провайдер: openai, deepseek, или anthropic
AI_PROVIDER=deepseek

# Модель для генерации ответов
AI_MODEL=deepseek-chat

# ==================================================
# DeepSeek API (РЕКОМЕНДУЕТСЯ - очень дешево!)
# ==================================================
# Регистрация: https://platform.deepseek.com/
# Цены: ~$0.14 за 1M токенов (в 100 раз дешевле GPT-4!)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ==================================================
# OpenAI API
# ==================================================
# Регистрация: https://platform.openai.com/
# ВАЖНО: Нужен для embeddings, даже если используете DeepSeek!
OPENAI_API_KEY=sk-proj-your-openai-api-key

# ==================================================
# Anthropic API (опционально)
# ==================================================
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ==================================================
# Embeddings Configuration
# ==================================================
# Провайдер для embeddings (рекомендуется openai)
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ==================================================
# Pinecone Vector Database
# ==================================================
# Регистрация: https://www.pinecone.io/
# Free tier: 100,000 векторов бесплатно
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1

# Единый индекс для обоих агентов (FREE tier!)
# Документы НТД и Договоры разделяются через метаданные
PINECONE_INDEX=ai-agents-knowledge-base

# ==================================================
# Database (опционально)
# ==================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_agents

# ==================================================
# Application Settings
# ==================================================
DEBUG=True
LOG_LEVEL=INFO
MAX_RESPONSE_TIME=10

# RAG параметры
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=3
